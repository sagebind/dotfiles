[Unit]
Description=Xremap
PartOf=graphical-session.target
After=graphical-session.target

[Service]
ExecStart=/usr/bin/xremap --watch=config,device --ignore=solaar --ignore=ydotoold --ignore=Espanso %h/.config/xremap/config.yml
Restart=always
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=niri.service
